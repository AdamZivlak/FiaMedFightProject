<Page
    x:Class="FiaMedFight.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FiaMedFight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <!-- Include custom template and style files here -->
                <ResourceDictionary Source="ControlFunctionTemplates.xaml"/>
                <ResourceDictionary Source="ControlStyleTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Page.Resources>
    
    <Grid Height="1080" Width="1920">
        <Button Content="Hoverable" Template="{StaticResource ButtonTemplate}" Style="{StaticResource DiceButtonStyle}"/>

    </Grid>
</Page>
